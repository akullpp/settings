[alias]
	ap = !git add . && git commit --amend --no-edit && git push -f
	st = status
	stash = stash -u -k
	undo = reset --soft HEAD^
[core]
	autocrlf = false
	eol = lf
	ignorecase = false
[log]
	decorate = full
[merge]
	ff = only
[pull]
	rebase = true
[push]
	default = simple
	followTags = true
[rebase]
	autostash = true
[status]
	showUntrackedFiles = all
[stash]
	showPatch = true
