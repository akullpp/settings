[alias]
    ap = !git add . && git commit --amend --no-edit && git push -f
    st = status
    log = log --oneline
    stash = stash -u -k
    undo = reset --soft HEAD^
    dev = "!f() { git checkout development -- $1; }; f"
    all = "!f() { ls -R -d */.git | xargs -I{} bash -c \"echo {} && git -C {}/../ $1\"; }; f"
    back = "checkout -"
[core]
    editor = code --wait
    autocrlf = input
    ignorecase = false
[color]
    ui = true
[credential]
    helper = store
[delta]
    features = diff-so-fancy hyperlinks line-numbers decorations
    whitespace-error-style = 22 reverse
[delta "decorations"]
    commit-decoration-style = bold yellow box ul
    file-style = bold yellow ul
    file-decoration-style = none
[format]
    pretty = %Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset
[interactive]
    diffFilter = delta --color-only
[init]
    defaultBranch = development
[log]
    decorate = full
[pager]
    diff = delta
    log = delta
    reflog = delta
    show = delta
[pull]
    rebase = true
[push]
    default = simple
    followTags = true
[rebase]
    autostash = true
[status]
    showUntrackedFiles = all
[stash]
    showPatch = true
[user]
    name = Andreas Kull
    email = andreas.kull@pm.me
